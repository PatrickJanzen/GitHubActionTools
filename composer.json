{
  "name": "patrickjanzen/github_workflow_tools",
  "type": "library",
  "license": "proprietary",
  "authors": [
    {
      "name": "Patrick Janzen"
    }
  ],
  "require": {
    "php": ">=8"
  },
  "require-dev": {
    "infection/infection": "^0.27.10",
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^10",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "GitHubWorkflowTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GitHubWorkflowTools\\Test\\": "test/"
    }
  },
  "scripts": {
    "infection": [
      "infection -n --threads=4 --no-progress -s"
    ],
    "phpunit": [
      "phpunit -c phpunit.xml.dist --colors=auto --coverage-html=.qa/.coverage"
    ]
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
